{% extends 'base.html.twig' %}

{% block main %}

    <div class="flex h-screen bg-gray-100">
  <!-- Sidebar -->
  <div class="w-64 bg-gray-800 text-white p-6 space-y-6">
    <h2 class="text-2xl font-semibold">Admin Dashboard</h2>
    <div class="space-y-4">
      <a href="#" class="text-lg hover:text-gray-400">Dashboard</a>
      <a href="#" class="text-lg hover:text-gray-400">Gestion des utilisateurs</a>
      <a href="#" class="text-lg hover:text-gray-400">Propriétés</a>
      <a href="#" class="text-lg hover:text-gray-400">Statistiques</a>
      <a href="#" class="text-lg hover:text-gray-400">Paramètres</a>
    </div>
  </div>

  <!-- Main Content -->
  <div class="flex-1 p-8">
    <div class="bg-white rounded-lg shadow-lg p-6">
      <!-- Header -->
      <div class="flex justify-between items-center mb-6">
        <h3 class="text-xl font-semibold text-gray-800">Gestion des utilisateurs</h3>
        <div class="flex items-center space-x-4">
          <input
            type="text"
            placeholder="Rechercher un utilisateur"
            class="p-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-indigo-500"
          />
          <button class="bg-indigo-600 text-white py-2 px-4 rounded-lg hover:bg-indigo-700">
            Ajouter un utilisateur
          </button>
        </div>
      </div>

      <!-- User Table -->
      <table class="min-w-full bg-white border border-gray-300 rounded-lg shadow-sm">
        <thead class="bg-gray-100">
          <tr>
            <th class="px-6 py-3 text-left text-sm font-semibold text-gray-600">Nom</th>
            <th class="px-6 py-3 text-left text-sm font-semibold text-gray-600">Email</th>
            <th class="px-6 py-3 text-left text-sm font-semibold text-gray-600">Rôle</th>
            <th class="px-6 py-3 text-left text-sm font-semibold text-gray-600">Date d'inscription</th>
            <th class="px-6 py-3 text-center text-sm font-semibold text-gray-600">Actions</th>
          </tr>
        </thead>
        <tbody>
          <!-- Exemple d'un utilisateur -->
          <tr class="border-b hover:bg-gray-50">
            <td class="px-6 py-4 text-sm font-medium text-gray-900">Ahmed Benali</td>
            <td class="px-6 py-4 text-sm text-gray-600">ahmed@exemple.com</td>
            <td class="px-6 py-4 text-sm text-gray-600">Administrateur</td>
            <td class="px-6 py-4 text-sm text-gray-600">01/02/2023</td>
            <td class="px-6 py-4 text-center">
              <button class="text-indigo-600 hover:text-indigo-800 mr-3">
                Modifier
              </button>
              <button class="text-red-600 hover:text-red-800">Supprimer</button>
            </td>
          </tr>

          <!-- Plus d'utilisateurs... -->
        </tbody>
      </table>

      <!-- Pagination -->
      <div class="mt-6 flex justify-between items-center">
        <button class="bg-indigo-600 text-white py-2 px-4 rounded-lg hover:bg-indigo-700">Précédent</button>
        <span class="text-gray-600">Page 1 de 5</span>
        <button class="bg-indigo-600 text-white py-2 px-4 rounded-lg hover:bg-indigo-700">Suivant</button>
      </div>
    </div>
  </div>
</div>


{% endblock %}
