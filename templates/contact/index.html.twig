{% extends 'base.html.twig' %}

{% block title %}
    Profile
{% endblock %}

{% block main %}

    {# Inclure Navbar #}
    <div
        {{ react_component('Navbar', {"isAuthenticated": is_granted('IS_AUTHENTICATED'), "widthLimitation":true} , {permanent: true}) }}>
        Loading ....
    </div>

    {# Contenu de la formulaire #}
    <div class="min-h-screen bg-gray-50 py-8">
        <div class="max-w-4xl mx-auto px-4">
            {# Afficher les messages flash #}
            {% for message in app.flashes('success') %}
            <div id="alert-border-3" class="flex items-center p-4 mb-4 text-green-800 border-t-4 border-green-300 bg-green-50 dark:text-green-400 dark:bg-gray-800 dark:border-green-800" role="alert">
                <svg class="shrink-0 w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
                </svg>
                <div class="ms-3 text-sm font-medium">
                    {{ message }}
                </div>
                <button type="button" class="ms-auto -mx-1.5 -my-1.5 bg-green-50 text-green-500 rounded-lg focus:ring-2 focus:ring-green-400 p-1.5 hover:bg-green-200 inline-flex items-center justify-center h-8 w-8 dark:bg-gray-800 dark:text-green-400 dark:hover:bg-gray-700"  data-dismiss-target="#alert-border-3" aria-label="Close">
                    <span class="sr-only">Dismiss</span>
                    <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                    </svg>
                </button>
            </div>
            {% endfor %}
            <div class="bg-white rounded-lg shadow-sm p-6">
                {# Titre du formulaire #}
                <h2 class="text-2xl font-bold text-gray-800 mb-6">Contactez-nous</h2>

                {# Formulaire Symfony #}
                {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

                    {# Champ Nom #}
                    <div>
                        {{ form_label(form.nom, 'Nom complet', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        {{ form_widget(form.nom, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-1 focus:ring-gray-500 focus:border-gray-500'}}) }}
                        {{ form_errors(form.nom, {'attr': {'class': 'text-sm text-red-600 mt-1'}}) }}
                    </div>

                    {# Champ Email #}
                    <div>
                        {{ form_label(form.email, 'Email', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        {{ form_widget(form.email, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-1 focus:ring-gray-500 focus:border-gray-500'}}) }}
                        {{ form_errors(form.email, {'attr': {'class': 'text-sm text-red-600 mt-1'}}) }}
                    </div>

                    {# Champ Sujet #}
                    <div>
                        {{ form_label(form.sujet, 'Sujet', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        {{ form_widget(form.sujet, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-1 focus:ring-gray-500 focus:border-gray-500'}}) }}
                        {{ form_errors(form.sujet, {'attr': {'class': 'text-sm text-red-600 mt-1'}}) }}
                    </div>

                    {# Champ Message #}
                    <div>
                        {{ form_label(form.message, 'Message', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        {{ form_widget(form.message, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-1 focus:ring-gray-500 focus:border-gray-500', 'rows': 4}}) }}
                        {{ form_errors(form.message, {'attr': {'class': 'text-sm text-red-600 mt-1'}}) }}
                    </div>

                    {# Bouton de soumission #}
                    <div>
                        <button type="submit" class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
                            Envoyer
                        </button>
                    </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}